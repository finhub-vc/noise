# NOISE Trading Engine - Environment Configuration
# Copy this file to .env or .dev.vars and fill in your values

# =============================================================================
# API Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
NOISE_API_KEY=your-api-key-here

# =============================================================================
# Tradovate Configuration (Futures Broker)
# =============================================================================
TRADOVATE_USERNAME=your-tradovate-username
TRADOVATE_PASSWORD=your-tradovate-password
TRADOVATE_APP_ID=your-tradovate-app-id
TRADOVATE_CID=your-tradovate-cid
TRADOVATE_SECRET=your-tradovate-secret
TRADOVATE_DEMO_URL=https://demo.tradovateapi.com/v1
TRADOVATE_LIVE_URL=https://live.tradovateapi.com/v1

# =============================================================================
# Alpaca Configuration (Equities Broker)
# =============================================================================
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-api-secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets # Use https://api.alpaca.markets for live
ALPACA_DATA_URL=https://data.alpaca.markets

# =============================================================================
# Cloudflare Configuration
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# =============================================================================
# D1 Database IDs (Set by setup script)
# =============================================================================
D1_DEV_DATABASE_ID=
D1_PROD_DATABASE_ID=

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=info
TRADOVATE_LIVE=false

# =============================================================================
# Risk Configuration (Optional - overrides defaults)
# =============================================================================
MAX_RISK_PER_TRADE_PERCENT=2
MAX_DAILY_LOSS_PERCENT=5
MAX_WEEKLY_LOSS_PERCENT=10
MAX_DRAWDOWN_PERCENT=15
MAX_POSITION_PERCENT=20
MAX_CONCURRENT_POSITIONS=10

# =============================================================================
# Signal Configuration (Optional - overrides defaults)
# =============================================================================
MIN_SIGNAL_STRENGTH=0.6
PRIMARY_TIMEFRAME=15m
CONFIRMATION_TIMEFRAMES=1h,4h
ENABLE_REGIME_FILTER=true
ENABLE_TIME_FILTER=true
